<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:columnCount="2"
    android:rowCount="4"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:text="Мой Журнал Настроения"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сегодняшняя статистика"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginBottom="8dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />


    <!-- Кнопка "Новая запись" (строка 1, колонка 0) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:layout_columnSpan="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- Записи -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Записей"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Настроение -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:textSize="24sp"
                android:textColor="#2196F3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настроение"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Активность -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textSize="24sp"
                android:textColor="#FF9800"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Активность"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <!-- 3. Зелёная полоска -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#4CAF50"
        android:layout_columnSpan="2"
        android:layout_marginBottom="24dp" />
    <Button
        android:id="@+id/newEntryButton"
        android:layout_width="8dp"
        android:layout_height="150dp"
        android:text="Новая запись"
        android:textSize="18sp"
        android:gravity="center"
        android:backgroundTint="#4CAF50"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" />

    <!-- Кнопка "История" (строка 1, колонка 1) -->
    <Button
        android:id="@+id/historyButton"
        android:layout_width="8dp"
        android:layout_height="150dp"
        android:text="История"
        android:textSize="18sp"
        android:gravity="center"
        android:backgroundTint="#2196F3"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" />
    <Button
        android:id="@+id/statsButton"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:text="Статистика"
        android:textSize="18sp"
        android:gravity="center"
        android:backgroundTint="#FF9800"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" />



    <Button
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:text="Настройки"
        android:textSize="18sp"
        android:gravity="center"
        android:backgroundTint="#9C27B0"
        android:layout_margin="8dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сегодня:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Записей сегодня: 0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Среднее настроение: -"
            android:textSize="14sp" />

    </LinearLayout>


</GridLayout>
